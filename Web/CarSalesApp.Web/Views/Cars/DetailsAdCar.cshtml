@model CarSalesApp.Web.ViewModels.Cars.CarAdDetailsViewModel

@{
    this.ViewData["Title"] = "Details Page";
}

<div class="offset-1"><h2>@Model.Title</h2></div>

<br />
<div class="offset-1">
    <!--style="ma2x-width: 540px;"-->
    <div class="center row no-gutters">
        <div class="col-md-6">
            <img src="@Model.MainImage" class="card-img" alt="Genereal photo">
        </div>
        <div class="card center col-md-6">
            <br />
            <div class="center"><h4 style="color:orangered">Price: €@Model.Price</h4></div>
            <br />
            <table width="60%" class="center">
                <tbody>
                    <tr>
                        <td align="left">Mileage<span class="coln">:</span></td>
                        <td align="right">@Model.Mileage</td>
                    </tr>
                    <tr>
                        <td align="left">Fisrt Registration<span class="coln">:</span></td>
                        <td align="right">@Model.FirstRegistrationMonthYear</td>
                    </tr>
                    <tr>

                        <td align="left">Power<span class="coln">:</span></td>
                        <td align="right">@Model.PowerDescription</td>
                    </tr>
                    <tr>
                        <td align="left">Geraring Type<span class="coln">:</span></td>
                        <td align="right">@Model.Drive.GearType</td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div class="center"><h4 style="color:brown">Email: dragunchev1992@gmail.com</h4></div>
            <br />
            <div class="center"><h4 style="color:brown">Phone:  9876543210</h4></div>
            <br />
            <br />
            <p class="card-text offset-5"><small class="text-muted">Last updated 3 mins ago</small></p>
        </div>
    </div>
</div>
<hr />
<div class="offset-1"><h4>Details</h4></div>
<div class="row offset-1">
    <div class="col-md divTable">
        <h5>Drive</h5>
        <div class="divRow">
            <div class="divCellLeft">Fuel</div>
            <div class="divCellRight">@Model.Drive.Fuel</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Power</div>
            <div class="divCellRight">@Model.PowerDescription</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Displacement</div>
            <div class="divCellRight">@Model.Drive.Displacement</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Gearing Type</div>
            <div class="divCellRight">@Model.Drive.GearType</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Gears</div>
            <div class="divCellRight">@Model.Drive.Gear</div>
        </div>
    </div>
    <div class="col-md divTable">
        <h5>Properties</h5>
        <div class="divRow">
            <div class="divCellLeft">Make</div>
            <div class="divCellRight">@Model.Make.Name</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Model</div>
            <div class="divCellRight">@Model.Model.Name</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">First Registration</div>
            <div class="divCellRight">@Model.FirstRegistration.Year</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Body Color</div>
            <div class="divCellRight">@Model.Color</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Body</div>
            <div class="divCellRight">@Model.Category</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Nr. of Doors</div>
            <div class="divCellRight">@Model.Doors</div>
        </div>
        <div class="divRow">
            <div class="divCellLeft">Nr. of Seats</div>
            <div class="divCellRight">@Model.Seats</div>
        </div>
    </div>
</div>
<hr />
<div class="offset-1"><h4>Equipment</h4></div>
<div class="row  offset-1">
    <div class="col-3">
        <h5>Comfort & Convenience</h5>
    </div>
    <div class="col-3">
        <h5>Entertainment & Media</h5>
    </div>
    <div class="col-3">
        <h5>Extras</h5>
    </div>
    <div class="col-3">
        <h5>Safety & Security</h5>
    </div>
</div>

